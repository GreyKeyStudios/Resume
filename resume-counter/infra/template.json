{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "resumecounterfuncsa123"
    },
    "frontDoorName": {
      "type": "string",
      "defaultValue": "resume-frontdoor"
    },
    "customDomain": {
      "type": "string",
      "defaultValue": "resume.greykeystudios.com"
    }
  },
  "resources": [
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "staticWebsite": {
          "enabled": true,
          "indexDocument": "index.html",
          "errorDocument404Path": "index.html"
        }
      }
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-04-15",
      "name": "greykeycosmos",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "locations": [
          {
            "locationName": "[parameters('location')]",
            "failoverPriority": 0
          }
        ],
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Session"
        },
        "capabilities": [
          { "name": "EnableTable" }
        ]
      }
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.DocumentDB/databaseAccounts/apis/tables",
      "apiVersion": "2023-04-15",
      "name": "greykeycosmos/Table/VisitorCount",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', 'greykeycosmos')]"
      ],
      "properties": {}
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('functionAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', 'greykeycosmos')]"
      ],
      "kind": "functionapp,linux",
      "properties": {
        "siteConfig": {
          "linuxFxVersion": "Python|3.12",
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2022-09-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "python"
            },
            {
              "name": "COSMOSDB_CONNECTION_STRING",
              "value": "[listConnectionStrings(resourceId('Microsoft.DocumentDB/databaseAccounts', 'greykeycosmos'), '2023-04-15').connectionStrings[0].connectionString]"
            }
          ]
        }
      }
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.Cdn/profiles",
      "apiVersion": "2023-05-01",
      "name": "[parameters('frontDoorName')]",
      "location": "global",
      "sku": {
        "name": "Standard_AzureFrontDoor"
      }
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.Cdn/profiles/afdEndpoints",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('frontDoorName'), '/default')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles', parameters('frontDoorName'))]"
      ],
      "properties": {
        "enabledState": "Enabled"
      }
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.Cdn/profiles/originGroups",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('frontDoorName'), '/storage-origin-group')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles', parameters('frontDoorName'))]"
      ],
      "properties": {
        "loadBalancingSettings": {
          "sampleSize": 4,
          "successfulSamplesRequired": 2
        },
        "healthProbeSettings": {
          "probePath": "/",
          "probeRequestType": "GET",
          "probeProtocol": "Https",
          "probeIntervalInSeconds": 30
        }
      }
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.Cdn/profiles/originGroups/origins",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('frontDoorName'), '/storage-origin-group/storage-origin')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles/originGroups', parameters('frontDoorName'), 'storage-origin-group')]"
      ],
      "properties": {
        "hostName": "[concat(parameters('storageAccountName'), '.z13.web.core.windows.net')]",
        "httpPort": 80,
        "httpsPort": 443,
        "originHostHeader": "[concat(parameters('storageAccountName'), '.z13.web.core.windows.net')]",
        "priority": 1,
        "weight": 1000,
        "enabledState": "Enabled"
      }
    },
    {
      "condition": "[equals(resourceGroup().name, 'cloud-resume-rg')]",
      "type": "Microsoft.Cdn/profiles/afdEndpoints/routes",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('frontDoorName'), '/default/default-route')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles/afdEndpoints', parameters('frontDoorName'), 'default')]",
        "[resourceId('Microsoft.Cdn/profiles/originGroups', parameters('frontDoorName'), 'storage-origin-group')]"
      ],
      "properties": {
        "enabledState": "Enabled",
        "forwardingProtocol": "HttpsOnly",
        "patternsToMatch": [
          "/*"
        ],
        "originGroup": {
          "id": "[resourceId('Microsoft.Cdn/profiles/originGroups', parameters('frontDoorName'), 'storage-origin-group')]"
        }
      }
    }
  ]
}
